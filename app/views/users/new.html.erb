<div class="container pt-20 mx-auto">
  <h1 class="pt-20 mb-10 text-center md:text-3xl sm:text-xl"><%=  t '.title' %></h1>
  <%= form_with model: @user, local: true do |f| %>
    <div class="container flex flex-col items-centers">
      <div class="cotainer py-5 flex flex-col items-center">
        <%= f.label :name %>
        <%= f.text_field :name, class:"input input-bordered user_new_input" %>
      </div>
      <div class="cotainer py-5 flex flex-col items-center">
        <%= f.label :email %>
        <%= f.email_field :email, class:"input input-bordered user_new_input" %>
      </div>
      <div class="cotainer py-5 flex flex-col items-center">
        <%= f.label :password %>
        <%= f.password_field :password, class:"input input-bordered user_new_input", placeholder: t('.minimum') %>
      </div>
      <div class="cotainer p-5 flex flex-col items-center">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class:"input input-bordered user_new_input" %>
      </div>
    </div>
    <div class="container flex justify-center items-center py-10 ">
      <%= f.submit (t'.register'), class:"btn btn-lg btn-outline" %>
    </div>
  <% end %>
</div>
