<%= content_for(:title, t('.title')) %>
<div class="page">
  <div class="pt-32 px-5 mx-auto md:text-3xl text-2xl text-center">
    <h1 class=""><%= @category.title %>級に合格した仲間達</h1>
    <div class="md:grid md:grid-cols-3 md:gap-4 md:gap-4 flex-wrap pt-20">
      <%= render @test_comments, category: @category, souvenir: @souvenir %>
    </div>
    <div class="flex justify-center pb-10">
      <% if params[:from_passed_list] == "true" %>
        <%= link_to t('defaults.back'), passed_lists_path, class: "btn btn-lg btn-outline" %>
      <% else %>
        <%= link_to t('defaults.categories'), categories_path, class: "btn btn-lg btn-outline" %>
      <% end %>
    </div>
    <div class="py-10">
    <%= paginate @test_comments %>
    </div>
  </div>
</div>


    
