<%= content_for(:title, t('.title')) %>
<div class="page h-full">
  <div class="container pt-32 mb-10 mx-auto">
    <h1><%= @category.title %>級に合格した仲間達</h1>
    <div class="grid grid-cols-3 gap-4 mx-10">
      <%= render @test_comments, category: @category, souvenir: @souvenir %>
    </div>
    <div class="flex justify-center">
      <% if params[:from_passed_list] == "true" %>
        <%= link_to t('defaults.back'), passed_lists_path, class: "btn btn-lg btn-outline" %>
      <% else %>
        <%= link_to t('defaults.categories'), categories_path, class: "btn btn-lg btn-outline" %>
      <% end %>
    </div>
    <%= paginate @test_comments %>
  </div>
</div>


    
