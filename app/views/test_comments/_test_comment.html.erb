<div class="containe certification w-96 bg-opacity-90 pb-20 md:pb-20 py-10 mx-auto">
  <p class="text-center md:text-xl text-sm md:pt-12 pt-6 font-black"><%= category.title.upcase %>級 合格証明書</p>
  <p class="text-right text-sm pt-3 pr-10">氏名：<%= test_comment.user.name %></p>
  <div class="flex justify-end pr-14">
    <%= image_tag test_comment.user.avatar.url, class: "w-14" %>
  </div>
  <div class="md:text-sm px-5 md:text-xl text-sm">
    <div class="flex flex-col items-center">
      <div class="md:h-20 px-5 input input-bordered md:w-72 w-60 h-28">
        <%= test_comment.content %>
      </div>
    </div>
    <div class="flex flex-col items-center pt-10">
      <p>【<%= SouvenirPhoto.human_attribute_name(:name) %>】</p>
      <p><%= test_comment.souvenir_photo.name %></p>
      <%= image_tag test_comment.souvenir_photo.image_url, class:"rounded-lg md:w-1/2 w-40 pt-5" %>
    </div>
  </div>
  <div class="flex space-x-5 items-center pt-10 pb-20">
    <%= render 'crud_menus', test_comment: test_comment, category: category if current_user.own?(test_comment) %>
    <div>
      <i class="fa-brands fa-square-x-twitter"></i>
    </div>
  </div>
</div>
