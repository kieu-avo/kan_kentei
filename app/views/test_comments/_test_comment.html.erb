<div class="container certification w-fit pb-28 md:pb-20 py-10 md:mx-auto">
  <p class="text-center md:text-2xl text-md md:pt-10 pt-2 font-black"><%= category.title %>級 合格証明書</p>
  <div class="flex items-center space-x-20 md:px-10">
    <div class="pl-16 pt-2 md:pt-10">
      <%= image_tag test_comment.user.avatar.url, class:"md:max-w-sm w-12 border-solid border-2 border-neutral-400 rounded-lg" %>
    </div>
    <p class="text-sm pt-3 pr-14 md:pl-20 text-nowrap">氏名：<%= test_comment.user.name %></p>
  </div>
  <div class="px-5 md:pt-5 md:text-md text-sm font-bold">
    <div class="flex flex-col items-center pt-3">
      <div class="md:text-md text-sm input input-bordered md:w-68 w-60 h-28">
        <%= test_comment.content %>
      </div>
    </div>
    <div class="flex flex-col items-center md:pt-5 pt-1">
      <p>【<%= SouvenirPhoto.human_attribute_name(:name) %>】</p>
      <%if test_comment.souvenir_photo.image_url.present? %>
        <p><%= test_comment.souvenir_photo.name %></p>
        <%= image_tag test_comment.souvenir_photo.image_url, class:"rounded-lg md:w-66 w-40 pt-2" %>
      <% else %>
        <p><%= test_comment.souvenir_photo.name %></p>
        <%= image_tag "no_image.jpg", class: "rounded-lg md:w-44 w-32 md:h-40 h-28" %>
      <% end %>
    </div>
  </div>
  <div class="md:text-4xl text-3xl flex space-x-5 items-center pt-10 pb-20 px-40 md:pl-28">
    <% if current_user.own?(test_comment) %>
      <div>
        <%= link_to "https://twitter.com/share?url=#{root_url}&text=#{category.title}級に合格しました。%0A同じ級に合格したみんなよろしくね🤝&hashtags=勘検定,#{category.title},旅", target: '_blank', data: { toggle: "tooltip", placement: "bottom" }, title: "Xでシェア" do %>
          <i class="fa-brands fa-square-x-twitter"></i>
        <% end %>
      </div>
      <%= render 'crud_menus', test_comment: test_comment, category: category  %>
    <% end %>
  </div>
</div>



