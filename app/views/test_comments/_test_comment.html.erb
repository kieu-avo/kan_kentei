<div class="certification mt-10 p-5 mt-20 mx-auto">
  <div class="pt-20">
    <p class="text-center text-3xl pb-5"><%= category.title.upcase %>級 合格証明書</p>
    <p class="text-right pr-10">氏名：<%= test_comment.user.name %></p>
    <div class="flex justify-end pr-12">
      <%= image_tag test_comment.user.avatar.url, class: "w-20 flex" %>
    </div>
  </div>
  <div class="pt-10 space-y-10 pl-10">
    <div class="flex space-x-10">
      <p><%= SouvenirPhoto.human_attribute_name(:name) %></p>
      <%if test_comment.souvenir_photo.image_url.present? %>
        <%= image_tag test_comment.souvenir_photo.image_url, class: "border-solid border-2 border-neutral-400 rounded-lg w-80 h-80"%>
      <% else %>
        <p><%= test_comment.souvenir_photo.name %></p>
      <% end %>
    </div>
    <div class="flex flex-col space-y-3">
      <p><%= TestComment.human_attribute_name(:content) %></p>
      <div>
        <%= test_comment.content %>
      </div>
    </div>
  </div>
    <%= render 'crud_menus', test_comment: test_comment, category: category if current_user.own?(test_comment) %>
</div>
