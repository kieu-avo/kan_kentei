<div class="certification w-1/2 mt-10 p-5 mt-20 mx-auto">
  <div class="pt-20">
    <p class="text-center text-3xl pb-5"><%= category.title.upcase %>級 合格証明書</p>
    <p class="text-right pr-10">氏名：<%= current_user.name %></p>
    <div class="flex justify-end pr-12">
      <%= image_tag current_user.avatar.url, class: "w-20 flex" %>
    </div>
  </div>
  <%= form_with model: test_comment, url: category_test_comments_path do |f| %>
    <%= f.hidden_field :test_category_id, value: @category.id %>
    <%= f.hidden_field :souvenir_photo_id, value: @souvenir.id %>
    <div class="pt-10 space-y-10 pl-10">
      <div class="flex space-x-10">
        <%= f.label :name, SouvenirPhoto.human_attribute_name(:name) %>
        <%if souvenir.image_url.present? %>
          <p><%= souvenir.name %></p>
          <%= image_tag souvenir.image_url, class: "border-solid border-2 border-neutral-400 rounded-lg w-80 h-80"%>
        <% else %>
          <p><%= souvenir.name %></p>
        <% end %>
      </div>
      <div class="flex flex-col space-y-3 container">
        <%= f.label :content, TestComment.human_attribute_name(:content), class:"wrap" %>
        <%= f.text_area:content, placeholder: t('test_comments.new.example'), class:"input input-bordered user_new_input max-w-sm h-32 mr-10" %>
      </div>
      <div class="container flex justify-center items-center pt-20 ">
        <%= f.submit t('test_comments.new.post'), class:"btn btn-lg btn-outline mr-10" %>
      </div>
    </div>
  <% end %>
</div>

    
