<%= content_for(:title, t('.title')) %>
<div class="container pt-10 mb-10 md:pt-20 mx-auto font-sans font-light">
  <h1 class="pt-20 mb-10 text-center md:text-5xl text-3xl"><%= t('.title') %></h1>
  <%= form_with model: @user, url: password_reset_path(@token) do |f| %>
    <div class="py-5 flex flex-col items-center">
      <%= f.label :email %>
      <span class="input input-bordered w-full max-w-xs flex items-center"><%= @user.email %></span>
    </div>
    <div class="cotainer py-5 flex flex-col items-center">
      <%= f.label :password %>
      <%= f.password_field :password, class:"input input-bordered w-full max-w-xs", placeholder: t('defaults.minimum') %>
    </div>
    <div class="cotainer p-5 flex flex-col items-center">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class:"input input-bordered w-full max-w-xs" %>
    </div>
    <div class="container flex justify-center items-center py-10">
      <%= f.submit t('defaults.submit'), class:"btn primary btn-lg bg-zinc-700 text-white" %>
    </div>
  <% end %>
</div>