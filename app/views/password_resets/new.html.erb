<%= content_for(:title, t('.title')) %>
<div class="container pt-10 mb-10 md:pt-20 mx-auto font-sans font-light">
  <h1 class="pt-20 mb-20 text-center md:text-5xl text-3xl"><%= t('.title') %></h1>
  <%= form_with url: password_resets_path do |f| %>
    <div class="cotainer py-5 md:text-2xl flex flex-col items-center">
      <%= f.label :email, User.human_attribute_name(:email) %>
      <%= f.email_field :email, class:"input input-bordered w-full max-w-xs" %>
    </div>
    <div class="container flex justify-center items-center pt-28 pb-10">
      <%= f.submit t('defaults.submit'), class:"btn primary btn-lg bg-zinc-700 text-white" %>
    </div>
  <% end %>
</div>