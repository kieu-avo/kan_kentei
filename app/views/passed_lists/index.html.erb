<%= content_for(:title, t('.title')) %>
<div class="background-image">
  <div class="pt-32 md:px-32 px-20 pb-20 md:text-3xl text-2xl mx-auto text-center">
    <h1>合格級一覧</h1>
    <div class="text-2xl pt-32 space-x-2 md:flex md:flex-wrap grid grid-cols-2">
      <% @passed_quizzes.each do |passed| %>
        <div class="dropdown dropdown-hover">
          <label tabindex="0" class="btn m-1"><p><%= passed.test_category.title %>級</p></label>
          <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
            <li><%= link_to t('quizzes.show.title'), category_quiz_path(passed.test_category_id, passed.id, from_passed_list: true) %></li>
            <li><%= link_to t('test_comments.show.buddy'), category_test_comments_path(passed.test_category_id, from_passed_list: true)  %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
 
