<header class="fixed top-0 left-0 w-screen bg-header_footer_color-400 p-2 font-sans">
  <div class="flex items-center justify-between cursor-pointe pr-5">
    <%= link_to image_tag('logo3.png', class:'w-20 ml-5'), root_path %>
    <div class="space-x-10 hidden md:flex">
    <!--各ボタンのリンクパスを追加すること！！！ -->
      <%= link_to t('defaults.categories'), categories_path, class: "header-button" %>
      <%= link_to t('defaults.passed_list'), passed_lists_path, class: "header-button" %>
      <div class="dropdown dropdown-bottom dropdown-end hidden md:flex">
        <label tabindex="0" class="btn header-button"><%= t('defaults.my_page') %></label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-200 rounded-box w-52">
          <li><%= link_to t('profiles.show.title'), profile_path %></li>
          <li><%= link_to (t 'defaults.logout'), logout_path, data: { turbo_method: :delete } %></li>
        </ul>
      </div>
    </div> 

    <!-- スマホサイズ -->
    <div class="dropdown dropdown-left md:hidden">
      <label tabindex="0" class="btn m-1"><i class="fa-solid fa-bars"></i></label>
      <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-200 rounded-box w-52">
        <li><%= link_to t('defaults.categories'), categories_path %></li>
        <li><%= link_to t('defaults.passed_list'),  passed_lists_path %></li>
        <li>
          <%= link_to t('defaults.my_page')%>
          <ul class="dropdown-menu">
            <li><%= link_to "■" + t('profiles.show.title'), profile_path %></li>
            <li><%= link_to "■" + t('defaults.logout'), logout_path, data: { turbo_method: :delete } %></li>
          </ul>
        </li>
      </ul> 
    </div>
  </div>
</header>


