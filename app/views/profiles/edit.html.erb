<%= content_for(:title, t('.title')) %>
<div class="container pt-20 mb-10 mx-auto h-full">
  <h1 class="pt-20 mb-10 text-center md:text-4xl sm:text-3xl"><%=  t '.title' %></h1>
  <%= form_with model: @user, url: profile_path do |f| %>
     <%= render 'shared/error_messages', object: f.object %>
    <div class="container flex flex-col items-centers text-xl">
      <div class="cotainer py-5 flex flex-col items-center">
        <%= f.label :name, User.human_attribute_name(:name) %>
        <%= f.text_field :name, class:"input input-bordered user_new_input" %>
      </div>
      <div class="cotainer py-5 flex flex-col items-center">
        <%= f.label :email, User.human_attribute_name(:email) %>
        <%= f.email_field :email, class:"input input-bordered user_new_input" %>
      </div>
      <div class="cotainer py-5 flex flex-col items-center">
        <div class="form-control w-full max-w-xs">
          <%= f.label :avatar, class: "text-center" %>
          <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: "file-input file-input-bordered w-full max-w-xs" %>
        </div>
      </div>
      <div class="flex justify-center">
        <%= image_tag @user.avatar.url, class: "border-solid border-2 border-neutral-400 rounded-lg w-80 h-80"%>
      </div>
    </div>
    <div class="container flex justify-center items-center pt-10">
      <%= f.submit t('defaults.register'), class:"btn btn-lg btn-outline" %>
    </div>
  <% end %>
</div>
