<%= content_for(:title, t('.title')) %>
<div class="container pt-20 mb-10 mx-auto h-full">
  <h1 class="pt-20 mb-10 text-center md:text-4xl text-3xl"><%=  t '.title' %></h1>
  <%= form_with model: @user, url: profile_path do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="container flex flex-col items-centers text-xl mx-auto pt-10 pb-20 max-w-lg rounded-lg bg-neutral-50 bg-opacity-90 shadow-neutral-700 shadow-lg">
      <div class="cotainer py-5 flex flex-col items-center">
        <%= f.label :name, User.human_attribute_name(:name) %>
        <%= f.text_field :name, class:"input input-bordered w-full max-w-xs" %>
      </div>
      <div class="cotainer py-5 flex flex-col items-center">
        <%= f.label :email, User.human_attribute_name(:email) %>
        <%= f.email_field :email, class:"input input-bordered w-full max-w-xs" %>
      </div>
      <div class="cotainer py-5 flex flex-col items-center">
        <div class="form-control w-full max-w-xs">
          <%= f.label :avatar, class: "text-center" %>
          <%= f.file_field :avatar, id: "user_image", class: "file-input file-input-bordered max-w-xs" %>
          <%= f.hidden_field :avatar_cache %>
        </div>
      </div>
      <div class="flex justify-center">
        <%= image_tag @user.avatar.url, id: "image", class:"w-40"%>
      </div>
    </div>
    <div class="container flex justify-center items-center pt-10">
      <%= f.submit t('defaults.register'), class:"btn primary btn-lg bg-zinc-700 text-white" %>
    </div>
  <% end %>
</div>
