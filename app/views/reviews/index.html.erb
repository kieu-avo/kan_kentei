<%= content_for(:title, t('.title')) %>
<div class="page">
  <div class="border-indigo-600 pt-32 px-10">
    <h1 class="md:text-4xl text-3xl pb-5 md:pt-20 text-center"><%= @category.title%>級のレビュー</h1>
    <p class="pt-3 md:text-xl text-lg text-right md:pr-10">回答人数：<%= @total_users %>名<i class="fa-solid fa-person"></i></p>
    <% @reviews.each do |review| %>
      <div class="review-item pt-20 text-xl md:text-2xl flex flex-wrap items-center justify-center" data-review-id="<%= review.id %>">
        <div class="w-2/3">
          <%= review.content %>
        </div>
        <div class="flex py-5" id="star-rating-<%= review.id %>"
          data-score="<%= @average_ratings[review.id] %>"
          data-star-on="<%= asset_path('star-on.png') %>"
          data-star-off="<%= asset_path('star-off.png') %>"
          data-star-half="<%= asset_path('star-half.png') %>">
        </div>
      </div>
    <% end %>
    <div class="flex justify-center pt-28 pb-20 space-x-10 ">
      <p><%= link_to t('defaults.back'), categories_path, class: "btn about md:btn-lg btn-outline bg-sky-200 font-sans" %></p>
      <p><%= link_to t('defaults.test'), category_quizzes_path(@category), class:"btn primary md:btn-lg bg-zinc-700 text-white font-sans" %></p>
    </div>
  </div>
</div>

